<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_room_member_dialog_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        app:srcCompat="@mipmap/ic_dialog_close" />

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_below="@+id/ivClose"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivHead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#ff252c2b"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textColor="#0041FF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMsg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAgree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:textColor="#616161"
            android:text="@string/agree"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btRefuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:textColor="#616161"
            android:text="@string/reject"
            android:textAllCaps="false"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>